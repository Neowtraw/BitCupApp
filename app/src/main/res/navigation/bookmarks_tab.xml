<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookmarks_tab"
    app:startDestination="@id/bookmarks_fragment">

    <fragment
        android:id="@+id/bookmarks_fragment"
        android:name="com.codingub.bitcupapp.presentation.features.bookmarks.ui.BookmarksFragment"
        android:label="@string/title_bookmarks"
        tools:layout="@layout/fragment_bookmarks">
        <action
            android:id="@+id/action_bookmarks_fragment_to_details_fragment"
            app:destination="@id/details_fragment" />
    </fragment>

    <fragment
        android:id="@+id/details_fragment"
        android:name="com.codingub.bitcupapp.presentation.features.details.ui.DetailsFragment"
        android:label="@string/title_details"
        tools:layout="@layout/fragment_details" >
    </fragment>

</navigation>