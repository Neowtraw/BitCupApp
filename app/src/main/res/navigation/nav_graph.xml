<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_tab">

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.codingub.bitcupapp.presentation.features.details.ui.DetailsFragment"
        android:label="@string/title_details" >
    </fragment>
    <fragment
        android:id="@+id/home_tab"
        android:name="com.codingub.bitcupapp.presentation.features.home.ui.HomeFragment"
        android:label="@string/title_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookmark_tab"
        android:name="com.codingub.bitcupapp.presentation.features.bookmarks.ui.BookmarksFragment"
        android:label="@string/title_bookmarks" >
        <action
            android:id="@+id/action_bookmarksFragment_to_detailsFragment2"
            app:destination="@id/detailsFragment" />
    </fragment>
</navigation>